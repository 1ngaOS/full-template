{
  "name": "full-template-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Full monorepo template with multiple apps and shared packages",
  "scripts": {
    "sample:fr": "pnpm --filter sample-frontend",
    "sample:be": "pnpm --filter sample-backend",
    "sample:docs": "pnpm --filter sample-docs",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

